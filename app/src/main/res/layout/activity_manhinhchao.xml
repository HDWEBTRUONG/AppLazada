<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundplashscreen"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:paddingTop="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="#80000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/iconbag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="Thế giới mua sắm  trong tầm tay bạn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:paddingTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/iconbag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="Giao hàng tận nơi + Thanh toán dễ dàng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:paddingTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/iconbag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="100% bảo vệ người tiêu dùng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_marginBottom="20dp"
        android:layout_gravity="center|bottom"
        android:src="@drawable/lazadacustomerlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>
